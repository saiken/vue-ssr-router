{
  "root": true,
  "extends": ["vue", "plugin:vue/recommended"],
  "rules": {
    "indent": [ 2, 4 ],
    "linebreak-style": [ 2, "unix" ],
    "semi": [ 2, "always" ],
    "no-console": "warn",
    "vue/component-name-in-template-casing": ["error", "kebab-case"]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
      "sourceType": "module"
  }
}
